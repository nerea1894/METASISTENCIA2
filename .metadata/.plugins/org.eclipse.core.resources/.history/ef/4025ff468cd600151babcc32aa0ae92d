		}
		if(e.getSource().equals(bFalta)){	
			
			//PONER FALTA AL ALUMNO SELECCIONADO"!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!
			}
	if(e.getSource().equals(bAmonestacion)){	
			
		
			ponerAmonestacion();

			//PONER amonestacion AL ALUMNO SELECCIONADO"!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!

	

		    
		
		
			}
		
		if(e.getSource().equals(bVolver)){	
			
